#!/usr/bin/env ruby -w

class CustomDirCompletion
  def initialize(command)
    @command = command
  end
  
  def matches
    projects.select do |task|
      task[0, typed.length] == typed
    end
  end
  
  def typed
    @command[/\s(.+?)$/, 1] || ''
  end
  
  def projects
    `ls ~`.split
  end
end

puts CustomDirCompletion.new(ENV["COMP_LINE"]).matches
exit 0